<resources>

    <style name="Regular">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="SemiBold">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Bold">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Regular_Dark" parent="Regular">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Regular_White" parent="Regular">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SemiBold_White" parent="SemiBold">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Regular_Mid" parent="Regular">
        <item name="android:textColor">@color/mid_gray</item>
    </style>

    <style name="SemiBold_Dark" parent="SemiBold">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="SemiBold_Blue" parent="SemiBold">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="DialogTheme" parent="Theme.ComposeMigration">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="BlueButton">
        <item name="android:minHeight">54dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/ts_16</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingEnd">31dp</item>
        <item name="android:paddingStart">31dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@color/blue</item>
    </style>

    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.ComposeMigration</item>
        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/dark_gray</item>
        <item name="android:navigationBarColor">@color/dark_gray</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>